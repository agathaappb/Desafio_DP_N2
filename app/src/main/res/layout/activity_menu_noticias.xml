<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuNoticias">

    <TextView
        android:id="@+id/txt_temas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Notícias sobre:"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_tecnologia"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Tecnologia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_temas"/>
    <Button
        android:id="@+id/btn_mobile"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="mobile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_tecnologia"/>
    <Button
        android:id="@+id/btn_games"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="games"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_mobile"/>
    <Button
        android:id="@+id/btn_saude"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Saúde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_games"/>


</androidx.constraintlayout.widget.ConstraintLayout>